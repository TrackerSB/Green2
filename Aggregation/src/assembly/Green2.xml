<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.0.0" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>Green2</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- main jars -->
        <fileSet>
            <directory>../ParentExecutables/Launcher/target</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*SingleJar.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>../ParentExecutables/MemberManagement/target</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../ParentExecutables/ConfigurationDialog/target</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../ParentExecutables/Uninstaller/target</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        
        <!-- libs  -->
        <fileSet>
            <directory>../ParentExecutables/Launcher/target/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../ParentExecutables/MemberManagement/target/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../ParentExecutables/ConfigurationDialog/target/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../ParentExecutables/Uninstaller/target/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        
        <!-- licenses -->
        <fileSet>
            <directory>../licenses</directory>
            <outputDirectory>licenses</outputDirectory>
        </fileSet>
        
        <!-- installation files -->
        <fileSet>
            <directory>../Installationattachments</directory>
            <outputDirectory></outputDirectory>
            <lineEnding>unix</lineEnding>
            <excludes>
                <exclude>*.vbs</exclude>
                <exclude>*.png</exclude>
                <exclude>*.ico</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>../Installationattachments</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.png</include>
                <include>*.ico</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../Installationattachments</directory>
            <outputDirectory></outputDirectory>
            <lineEnding>dos</lineEnding>
            <includes>
                <include>*.vbs</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>