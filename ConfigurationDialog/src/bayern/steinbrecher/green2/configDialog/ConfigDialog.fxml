<?import bayern.steinbrecher.green2.elements.textfields.CharsetTextField?>
<?import bayern.steinbrecher.green2.elements.textfields.CheckedRegexTextField?>
<?import bayern.steinbrecher.green2.elements.textfields.CheckedTextField?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="bayern.steinbrecher.green2.configDialog.ConfigDialogController">
    <CheckedTextField fx:id="profileNameTextField"
                      promptText="%profileName"
                      GridPane.rowIndex="0"
                      GridPane.columnIndex="0"
                      GridPane.columnSpan="2"/>
    <CheckBox fx:id="useSSHCheckBox"
              selected="true"
              text="%useSSH"
              GridPane.rowIndex="1"
              GridPane.columnIndex="0"
              GridPane.columnSpan="2"/>
    <Label text="%sshHost"
           GridPane.rowIndex="2"
           GridPane.columnIndex="0"/>
    <CheckedTextField fx:id="sshHostTextField"
                      disable="${!useSSHCheckBox.selected}"
                      checked="${useSSHCheckBox.selected}"
                      promptText="%sshHost"
                      GridPane.rowIndex="2"
                      GridPane.columnIndex="1"/>
    <Label text="%sshCharset"
           GridPane.rowIndex="3"
           GridPane.columnIndex="0"/>
    <CharsetTextField fx:id="sshCharsetTextField"
                      disable="${!useSSHCheckBox.selected}"
                      checked="${useSSHCheckBox.selected}"
                      promptText="%sshCharset"
                      GridPane.rowIndex="3"
                      GridPane.columnIndex="1"/>
    <Label text="%databaseHost"
           GridPane.rowIndex="4"
           GridPane.columnIndex="0"/>
    <CheckedTextField fx:id="databaseHostTextField"
                      promptText="%databaseHost"
                      GridPane.rowIndex="4"
                      GridPane.columnIndex="1"/>
    <Label text="%databaseName"
           GridPane.rowIndex="5"
           GridPane.columnIndex="0"/>
    <CheckedTextField fx:id="databaseNameTextField"
                      promptText="%databaseName"
                      GridPane.rowIndex="5"
                      GridPane.columnIndex="1"/>
    <Label text="%birthdayExpression"
           GridPane.rowIndex="6"
           GridPane.columnIndex="0"/>
    <CheckedRegexTextField fx:id="birthdayExpressionTextField"
                           promptText="%birthdayExpression"
                           GridPane.rowIndex="6"
                           GridPane.columnIndex="1"/>
    <CheckBox fx:id="sepaWithBomCheckBox"
              selected="true"
              text="%sepaUseBom"
              GridPane.rowIndex="7"
              GridPane.columnIndex="0"
              GridPane.columnSpan="2"/>

    <Label text="%invalidOrMissingInput"
           visible="${!controller.valid}"
           styleClass="warningLabel"
           GridPane.rowIndex="8"
           GridPane.columnIndex="0"/>
    <Label text="%profileAlreadyExists"
           visible="${controller.profileAlreadyExists}"
           styleClass="warningLabel"
           GridPane.rowIndex="8"
           GridPane.columnIndex="1"/>
    <Button disable="${!controller.valid}"
            text="%save"
            defaultButton="true"
            onAction="#saveSettings"
            GridPane.rowIndex="9"
            GridPane.columnIndex="0">
        <!-- FIXME Do it differently. It is not flexible enough -->
        <graphic>
            <ImageView fitHeight="15" fitWidth="15">
                <image>
                    <Image url="/icons/save.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>
    <Button disable="${!controller.valid}"
            text="%saveAndContinue"
            onAction="#saveSettingsAndContinue"
            GridPane.rowIndex="9"
            GridPane.columnIndex="1">
        <!-- FIXME Do it differently. It is not flexible enough -->
        <graphic>
            <ImageView fitHeight="15" fitWidth="15">
                <image>
                    <Image url="/icons/fast-forward.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>
</GridPane>
