<project name="module_dataprovider" default="compile.module.dataprovider">
    <dirname property="module.dataprovider.basedir" file="${ant.file.module_dataprovider}"/>

    <property name="module.jdk.home.dataprovider" value="${project.jdk.home}"/>
    <property name="module.jdk.bin.dataprovider" value="${project.jdk.bin}"/>
    <property name="module.jdk.classpath.dataprovider" value="${project.jdk.classpath}"/>

    <property name="compiler.args.dataprovider" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>

    <property name="dataprovider.output.dir" value="${module.dataprovider.basedir}/out/production/DataProvider"/>
    <property name="dataprovider.testoutput.dir" value="${module.dataprovider.basedir}/out/test/DataProvider"/>

    <path id="dataprovider.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="dataprovider.module.production.classpath">
        <path refid="${module.jdk.classpath.dataprovider}"/>
        <path refid="library.wizard.classpath"/>
    </path>

    <path id="dataprovider.runtime.production.module.classpath">
        <pathelement location="${dataprovider.output.dir}"/>
        <path refid="library.wizard.classpath"/>
    </path>

    <path id="dataprovider.module.classpath">
        <path refid="${module.jdk.classpath.dataprovider}"/>
        <pathelement location="${dataprovider.output.dir}"/>
        <path refid="library.wizard.classpath"/>
    </path>

    <path id="dataprovider.runtime.module.classpath">
        <pathelement location="${dataprovider.testoutput.dir}"/>
        <pathelement location="${dataprovider.output.dir}"/>
        <path refid="library.wizard.classpath"/>
    </path>


    <patternset id="excluded.from.module.dataprovider">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.dataprovider">
        <patternset refid="excluded.from.module.dataprovider"/>
    </patternset>

    <path id="dataprovider.module.sourcepath">
        <dirset dir="${module.dataprovider.basedir}">
            <include name="src"/>
        </dirset>
    </path>

    <path id="dataprovider.module.test.sourcepath">
        <dirset dir="${module.dataprovider.basedir}">
            <include name="test"/>
        </dirset>
    </path>


    <target name="compile.module.dataprovider"
            depends="compile.module.dataprovider.production,compile.module.dataprovider.tests"
            description="Compile module DataProvider"/>

    <target name="compile.module.dataprovider.production" depends="register.custom.compilers"
            description="Compile module DataProvider; production classes">
        <mkdir dir="${dataprovider.output.dir}"/>
        <javac2 destdir="${dataprovider.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}"
                memorymaximumsize="${compiler.max.memory}" fork="true"
                executable="${module.jdk.bin.dataprovider}/javac">
            <compilerarg line="${compiler.args.dataprovider}"/>
            <bootclasspath refid="dataprovider.module.bootclasspath"/>
            <classpath refid="dataprovider.module.production.classpath"/>
            <src refid="dataprovider.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.dataprovider"/>
        </javac2>

        <copy todir="${dataprovider.output.dir}">
            <fileset dir="${module.dataprovider.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.dataprovider.tests"
            depends="register.custom.compilers,compile.module.dataprovider.production"
            description="compile module DataProvider; test classes" unless="skip.tests">
        <mkdir dir="${dataprovider.testoutput.dir}"/>
        <javac2 destdir="${dataprovider.testoutput.dir}" debug="${compiler.debug}"
                nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true"
                executable="${module.jdk.bin.dataprovider}/javac">
            <compilerarg line="${compiler.args.dataprovider}"/>
            <bootclasspath refid="dataprovider.module.bootclasspath"/>
            <classpath refid="dataprovider.module.classpath"/>
            <src refid="dataprovider.module.test.sourcepath"/>
            <patternset refid="excluded.from.compilation.dataprovider"/>
        </javac2>

        <copy todir="${dataprovider.testoutput.dir}">
            <fileset dir="${module.dataprovider.basedir}/test">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="clean.module.dataprovider" description="cleanup module">
        <delete dir="${dataprovider.output.dir}"/>
        <delete dir="${dataprovider.testoutput.dir}"/>
    </target>
</project>