<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.traunviertler_traunwalchen.stefanhuber.memberselectiondialog.MemberSelectionController">
    <ListView fx:id="memberListView" maxHeight="300" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" />
    <Label text="Betrag in €" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField onAction="#closeIfValid" fx:id="contributionTextField" text="10" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <Button text="Alle auswählen" onAction="#selectAllMember" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <Label fx:id="missingInputLabel" text="Fehlende Angaben" styleClass="warningLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" visible="false" />
    <Button text="Fertig" fx:id="readyButton" onAction="#closeIfValid" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <Label fx:id="badInputLabel" text="Ungültige Angaben" styleClass="warningLabel" GridPane.rowIndex="3" GridPane.columnIndex="1" visible="false" />
</GridPane>
