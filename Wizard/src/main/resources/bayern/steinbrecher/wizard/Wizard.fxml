<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="bayern.steinbrecher.wizard.WizardController"
      styleClass="wizard">
    <StackPane fx:id="contents" styleClass="wizard-content"></StackPane>
    <ButtonBar styleClass="wizard-controls">
        <buttons>
            <Button fx:id="wizardControlPrevious"
                    text="%previous"
                    onAction="#showPrevious"
                    disable="${controller.caller.atBeginning}"/>
            <Button fx:id="wizardControlNext"
                    text="%next"
                    onAction="#showNext"
                    disable="${(!controller.caller.currentPage.hasNextFunction) || !controller.caller.currentPage.valid}"/>
            <Button fx:id="wizardControlFinish"
                    text="%finish"
                    onAction="#finish"
                    disable="${(!controller.caller.atFinish) || !controller.caller.currentPage.valid}"/>
            <!-- NOTE: These round braces are necessary! -->
        </buttons>
    </ButtonBar>
</VBox>
