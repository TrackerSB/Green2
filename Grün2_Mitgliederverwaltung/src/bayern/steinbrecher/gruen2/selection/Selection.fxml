<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import bayern.steinbrecher.gruen2.elements.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bayern.steinbrecher.gruen2.selection.SelectionController">
    <ListView fx:id="optionsListView" maxHeight="300" focusTraversable="false" />
    <HBox>
        <Label text="${controller.selectedCount}" />
        <Label text="%outOf" />
        <Label text="${controller.totalCount}" />
        <Label text="%chosen" />
    </HBox>
    <HBox spacing="10">
        <Button fx:id="selectAllButton" text="%selectAll" onAction="#selectAllOptions" />
        <Button fx:id="selectNoneButton" text="%selectNothing" disable="true" onAction="#selectNoOption" />
    </HBox>
    <HBox spacing="10">
        <Button text="%ready" defaultButton="true" fx:id="selectButton" disable="true" onAction="#select" />
        <Label fx:id="missingInput" text="%invalidOrMissingInput" styleClass="warningLabel" />
    </HBox>
</VBox>
