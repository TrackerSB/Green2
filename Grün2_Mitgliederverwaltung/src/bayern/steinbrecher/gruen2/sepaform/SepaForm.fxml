<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import bayern.steinbrecher.gruen2.elements.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="bayern.steinbrecher.gruen2.sepaform.SepaFormController">
    <Label text="Name des Einreichers: (Max. 70 Zeichen)" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <CheckedTextField maxColumnCount="70" promptText="Name des Einreichers" fx:id="creatorTextField" onAction="#ready" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label text="Kontoinhaber:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <CheckedTextField promptText="Kontoinhaber" fx:id="creditorTextField" onAction="#ready" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label text="IBAN:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <CheckedTextField promptText="IBAN" fx:id="ibanTextField" onAction="#ready" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="BIC:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <CheckedTextField promptText="BIC" fx:id="bicTextField" onAction="#ready" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label text="Gl채ubiger-ID:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <CheckedTextField promptText="Gl채ubiger-ID" fx:id="trusterIdTextField" onAction="#ready" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Label text="Verwendungszweck:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <CheckedTextField promptText="Verwendungszweck" fx:id="purposeTextField" onAction="#ready" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Label text="Ausf체hrungsdatum:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <DatePicker promptText="Ausf체hrungsdatum" fx:id="executionDatePicker" onKeyPressed="#readyIfEnter"  GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <Label text="Message-ID: (Max. 35 Zeichen)" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <HBox GridPane.columnIndex="1" GridPane.rowIndex="7" spacing="5" >
        <CheckedTextField maxColumnCount="35" promptText="Message-ID" fx:id="messageIdTextField" onAction="#ready" />
        <Button text="Erstellen" onAction="#generateMessageId" />
    </HBox>
    <Label text="Payment Information Identification: (Max. 35 Zeichen)" GridPane.columnIndex="0" GridPane.rowIndex="8" />
    <CheckedTextField maxColumnCount="35" promptText="Payment Information Identification" fx:id="pmtInfIdTextField" onAction="#ready" GridPane.columnIndex="1" GridPane.rowIndex="8" />
    
    <Label text="Eingabe zu lang" styleClass="warningLabel" visible="false" fx:id="inputTooLongLabel" GridPane.columnIndex="1" GridPane.rowIndex="9" />
    <Label text="Fehlende Angaben" styleClass="warningLabel" fx:id="missingInputLabel" GridPane.columnIndex="1" GridPane.rowIndex="10" />
    
    <Button text="Fertig" fx:id="readyButton" onAction="#ready" GridPane.columnIndex="0" GridPane.rowIndex="10" />
</GridPane>
