<?import bayern.steinbrecher.green2.elements.CheckedDoubleSpinner?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="bayern.steinbrecher.green2.contribution.ContributionController">
    <HBox spacing="10">
        <Label text="%contributionInEuro"/>
        <CheckedDoubleSpinner fx:id="contributionSpinner"
                              min="0"
                              max="200"
                              initialValue="10"
                              amountToStepBy="1"
                              editable="true"/>
    </HBox>
    <HBox spacing="10">
        <Button disable="${!contributionSpinner.valid}"
                text="%ready"
                defaultButton="true"
                onAction="#select"/>
        <Label visible="${!contributionSpinner.valid}"
               text="%invalidOrMissingInput"
               styleClass="warningLabel"/>
    </HBox>
</VBox>
