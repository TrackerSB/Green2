<?xml version="1.0"?>
<ruleset name="Green2 ruleset"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        Green2 customized ruleset.
    </description>

    <!-- Java Best practices -->
    <rule ref="category/java/bestpractices.xml" />

    <!-- Java Codestyle -->
    <rule ref="category/java/codestyle.xml">
        <exclude name="AbstractNaming" />
        <exclude name="CommentDefaultAccessModifier" />
        <exclude name="ForLoopsMustUseBraces" />
        <exclude name="IfElseStmtsMustUseBraces" />
        <exclude name="IfStmtsMustUseBraces" />
        <exclude name="LocalVariableCouldBeFinal" />
        <exclude name="MethodArgumentCouldBeFinal" />
        <exclude name="WhileLoopsMustUseBraces" />
    </rule>
    <rule ref="category/java/codestyle.xml">
        <properties>
            <property name="maximumStaticImports">0</property>
        </properties>
    </rule>

    <!-- Java Design -->
    <rule ref="category/java/design.xml">
        <exclude name="ModifiedCyclomaticComplexity" />
        <exclude name="NcssConstructorCount" />
        <exclude name="NcssMethodCount" />
        <exclude name="NcssTypeCount" />
        <exclude name="StdCyclomaticComplexity" />
    </rule>

    <!-- Java Documentation -->
    <rule ref="category/java/documentation.xml" />
    <rule ref="category/java/documentation.xml/CommentRequired">
        <properties>
            <property name="fieldCommentRequirement">Ignored</property>
            <property name="accessorCommentRequired">Required</property>
        </properties>
    </rule>
    <rule ref="category/java/documentation.xml/CommentSize">
        <properties>
            <property name="maxLineLength">120</property>
        </properties>
    </rule>

    <!-- Java Error Prone -->
    <rule ref="category/java/errorprone.xml">
        <exclude name="CallSuperLast" />
    </rule>

    <!-- Java Multithreading -->
    <rule ref="category/java/multithreading.xml" />

    <!-- Java Performance -->
    <rule ref="category/java/performance.xml" />

    <!-- Java Security -->
    <rule ref="category/java/security.xml" />

    <!-- POM Error Prone -->
    <!-- <rule ref="category/pom/errorprone.xml" /> -->
</ruleset>
